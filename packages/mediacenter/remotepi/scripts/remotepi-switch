. /etc/profile

if [ ! -f /storage/.cache/services/remotepi.conf ]; then
	exit
fi

REMOTEPI_VERSION=2015
. /storage/.cache/services/remotepi.conf

# this is the GPIO pin receiving the shutdown signal
GPIOpin1=14
if [ "$REMOTEPI_VERSION" = "2013" ]; then
  GPIOpin1=22
fi

echo "$GPIOpin1" > /sys/class/gpio/export
echo "in" > /sys/class/gpio/gpio$GPIOpin1/direction
while true; do
  sleep 1
  power=$(cat /sys/class/gpio/gpio$GPIOpin1/value)
  if [ $power != 0 ]; then
	touch /tmp/.remotepi-shutdown
	/usr/bin/xbmc-send --host=127.0.0.1 --port=9778 --action="Xbmc.ShutDown"
	break
  fi
done
